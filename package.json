{
  "name": "testwork_herobrands",
  "version": "1.0.0",
  "description": "",
  "main": "build/server.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "test": "jest --coverage",
    "webpack:dev": "rm -rf ./build && ./node_modules/webpack/bin/webpack.js --env.service=dev",
    "webpack:stage": "rm -rf ./build && ./node_modules/webpack/bin/webpack.js --env.service=stage --progress --colors",
    "webpack:prod": "rm -rf ./build && ./node_modules/webpack/bin/webpack.js --env.service=prod",
    "start:dev": "npm run webpack:dev && npm run test && node ./build/server.js",
    "start:prod": "npm run webpack:prod && node build/server.js",
    "start:stage": "npm run webpack:stage && npm run test  && node build/server.js",
    "start": "npm run start:dev",
    "seed:mysql": "node build/mysqlSeed.js"
  },
  "author": "",
  "license": "ISC",
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "global": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mysql": "^2.18.1",
    "ts-node": "^8.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/mysql": "^2.15.10",
    "@types/node": "^13.13.2",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "axios": "^0.19.2",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "jest": "^25.4.0",
    "terser-webpack-plugin": "^2.3.6",
    "ts-jest": "^25.4.0",
    "ts-loader": "^9.4.2",
    "typescript": "^3.8.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
