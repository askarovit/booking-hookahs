{
  "name": "testwork_herobrands",
  "version": "1.0.0",
  "description": "",
  "main": "build/server.js",
  "scripts": {
    "test": "jest --coverage",
    "webpack:dev": "rm -rf ./build && ./node_modules/webpack/bin/webpack.js --env.service=dev",
    "webpack:stage": "rm -rf ./build && ./node_modules/webpack/bin/webpack.js --env.service=stage --progress --colors",
    "webpack:prod": "rm -rf ./build && ./node_modules/webpack/bin/webpack.js --env.service=prod",
    "start:dev": "npm run webpack:dev && node ./build/server.js",
    "start:prod": "npm run webpack:prod && node build/server.js",
    "start:stage": "npm run webpack:stage && node build/server.js",
    "start": "npm run start:dev"
  },
  "author": "",
  "license": "ISC",
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "global": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/mysql": "^2.15.10",
    "@types/node": "^13.13.2",
    "axios": "^0.19.2",
    "copy-webpack-plugin": "^5.1.1",
    "dotenv-webpack": "^1.7.0",
    "file-loader": "^6.0.0",
    "jest": "^25.4.0",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.1",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
